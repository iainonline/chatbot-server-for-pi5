# Ollama Chatbot Configuration
# Copy this file to .env and update the values for your setup

# SECURITY WARNING: Change this to a random secret key in production!
SECRET_KEY=your-super-secret-key-change-this-in-production

# Database configuration
DATABASE_URL=sqlite:///chatbot.db

# Ollama configuration
OLLAMA_URL=http://localhost:11434

# Flask configuration
FLASK_ENV=production
FLASK_DEBUG=False

# Gunicorn configuration (for production)
GUNICORN_WORKERS=2
GUNICORN_BIND=0.0.0.0:8080
GUNICORN_TIMEOUT=120

# Optional: Set a custom admin password during initial setup
# ADMIN_PASSWORD=your-secure-admin-password

# Optional: External access configuration
# EXTERNAL_HOST=your-domain.com
# USE_HTTPS=true
